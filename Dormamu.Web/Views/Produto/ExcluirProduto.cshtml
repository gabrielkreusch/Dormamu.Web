@model Dormamu.Web.Models.Produto

@{
    ViewData["Title"] = "Excluir produto";
}

<div class="container content-container">
    <h1>Excluir produto</h1>
    <br />

    <h3>Are you sure you want to delete this?</h3>
    <hr />

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DescricaoBreve)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DescricaoBreve)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DescricaoCompleta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DescricaoCompleta)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estoque)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estoque)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Valor)
            </dd>
        </dl>

        <form asp-action="ExcluirProduto">
            <input type="hidden" asp-for="ID" />
            <div class="d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-danger">Excluir</button>
            </div>
            <a asp-action="Index">Voltar</a>
        </form>
    </div>
</div>