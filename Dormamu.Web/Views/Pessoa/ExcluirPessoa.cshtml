@model Dormamu.Web.Models.Pessoa

@{
    ViewData["Title"] = "Excluir pessoa";
}

<div class="container content-container">
    <h1>Excluir pessoa</h1>
    <br />

    <h3>Tem certeza de que deseja excluir essa pessoa?</h3>
    <hr />

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CPFCNPJ)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CPFCNPJ)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Telefone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Telefone)
            </dd>
        </dl>

        <form asp-action="ExcluirPessoa">
            <input type="hidden" asp-for="ID" />
            <div class="d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-danger">Excluir</button>
            </div>
            <a asp-action="Index">Voltar</a>
        </form>
    </div>
</div>